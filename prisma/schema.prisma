generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEV_DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions      Session[]
  accounts      Account[]
  AmazonTracker AmazonTracker?
  profile       Profile?

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@index([expiresAt])
  @@map("verification")
}

model AmazonTracker {
  id        String   @id @default(cuid())
  trackerId String   @unique
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isUsed    Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productLinks ProductLink[]
}

model ProductLink {
  id              String @id @default(cuid())
  AmazonTrackerId String
  url             String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  AmazonTracker    AmazonTracker    @relation(fields: [AmazonTrackerId], references: [id], onDelete: Cascade)
  linkUseHistories LinkUseHistory[]

  @@index([AmazonTrackerId])
}

model LinkUseHistory {
  id            String   @id @default(cuid())
  productLinkId String
  usedAt        DateTime @default(now())

  productLink ProductLink @relation(fields: [productLinkId], references: [id], onDelete: Cascade)

  @@index([productLinkId])
}

model Profile {
  id     String @id @default(cuid())
  userId String @unique

  username     String  @default("匿名")
  bio          String?
  twitter_id   String? @unique
  instagram_id String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profile")
}
